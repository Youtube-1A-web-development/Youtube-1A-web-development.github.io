    <script>
    const slider = document.querySelector('.slider');
let position = 0;

function slide(direction) {
    position += direction * 220; // 220px is the width of each card including margin
    position = Math.max(position, -220 * (slider.children.length - 1)); // Limit sliding to the left
    position = Math.min(position, 0); // Limit sliding to the right
    slider.style.transform = `translateX(${position}px)`;
}
    
